<h1>Trips</h1>

<table class = "table-striped">
  <thead>
    <tr>
      <th>Leaders</th>
      <th>County</th>
      <th>Location</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Cost</th>
      <th>Description</th>
      <th>Accomplished</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.leaders %></td>
        <td><%= trip.county %></td>
        <td><%= trip.location %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.cost %></td>
        <td><%= trip.description %></td>
        <td><%= trip.accomplished %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

